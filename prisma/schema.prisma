generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String           @id @default(cuid())
  full_name  String
  email      String   @unique
  phone      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  events     events[]
  refresh_tokens       refresh_token[]
  sms_sent    sms_sent[]
}

model refresh_token {
  id              String           @id @default(cuid())
  user_id      String
  token  String   @db.Text     
  expires_at  DateTime
  created_at  DateTime @default(now())
  revoked_at  DateTime?

  user        users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model event_types {
  id              String           @id @default(cuid()) // primary key
  name        String   @unique
  description String?  // nullable field
  logo        String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  events     events[]
  card_types  card_types[]
}

model events {
  id              String           @id @default(cuid())
  user_id       String
  event_type_id String
  title         String
  event_date    DateTime
  event_time    String
  description   String
  event_location String
  map_link      String    
  valid_status  Boolean   @default(true)
  payment_status Boolean  @default(false)
  access_code     String?  @unique 
  background_image  String?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // Relations
  user          users      @relation(fields: [user_id], references: [id])
  event_type     event_types @relation(fields: [event_type_id], references: [id])
  event_guests  event_guests[]
  sms_sent    sms_sent[]
  event_gallery  event_gallery[]
}

model event_guests {
  id              String           @id @default(cuid())
  full_name    String
  phone        String
  email        String?
  card_type_id String
  event_id     String
  access_code  String     @unique
  checkin_count Int    @default(0)
  is_checked    Boolean   @default(false)
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt

  // Relations
  events       events     @relation(fields: [event_id], references: [id])
  card_type    card_types  @relation(fields: [card_type_id], references: [id])
}

model event_gallery {
  id              String           @id @default(cuid())
  event_id    String
  media_url   String
  media_type  String
  uploaded_by String
  caption     String?
  is_private  Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // relation to events
  event   events @relation(fields: [event_id], references: [id])
}


model card_types {
  id              String           @id @default(cuid())
  event_type_id String
  name          String
  value         Int?
  description   String?      
  created_at    DateTime     @default(now())
  update_at     DateTime     @updatedAt

  // Relations
  event_type    event_types  @relation(fields: [event_type_id], references: [id])
  event_guests  event_guests[]
}

model sms_sent {
  id              String           @id @default(cuid())
  user_id         String
  event_id        String
  sms             String
  created_at    DateTime     @default(now())
  update_at     DateTime     @updatedAt

  // relation to events
  event   events @relation(fields: [event_id], references: [id])
  user          users      @relation(fields: [user_id], references: [id])
} 

model faqs {
  id              String           @id @default(cuid())
  question   String
  answer     String   @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

